alias extractlyc='for i in *; do lic=$(grep binaryLicense $i | sed "s/.*>\(.*\)<.*/\1/" - | base64 -d -); if [[ ! -z $lic ]] echo -n "$lic" > extracted_from_$i.lyc; done'
